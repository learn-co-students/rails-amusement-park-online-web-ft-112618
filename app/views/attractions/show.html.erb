<h2 align=center><%= @attraction.name %></h2>
<div class="card">
<p>Minimum Height: <%= @attraction.min_height %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Ticket Cost: <%= @attraction.tickets %></p>
<% if !current_user.admin %>
  <%= form_for(@attraction, url: user_path(session[:user_id])) do |f| %>
    <%= f.hidden_field :id %>
    <%= f.submit "Go on this ride" %>
  <% end %>
<% else %>
<button><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></button>
<% end %><br>
</div><br>
<div align=center>
<button><%= link_to "See attractions", attractions_path %></button>
<button><%= link_to "Log Out", logout_path %></button>
</div>
